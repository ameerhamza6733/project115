<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/btGenrateTwoDigitNumber"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTwoDigit"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTwoDigit"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/btGenrateTwoDigitNumber"
        app:layout_constraintEnd_toStartOf="@+id/btGenrateTwoDigitNumber"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/btGenrateThreeDigitNumber"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvThreeDigit"
        app:layout_constraintTop_toBottomOf="@id/btGenrateTwoDigitNumber"
        />

    <TextView
        android:id="@+id/tvThreeDigit"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/btGenrateThreeDigitNumber"
        app:layout_constraintEnd_toStartOf="@+id/btGenrateThreeDigitNumber"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btGenrateTwoDigitNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>